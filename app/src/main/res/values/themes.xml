<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyContacts" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Screen background -->
    <style name="SCREEN">
        <item name="android:background">#FFF</item>
    </style>

    <!-- Text color -->
    <style name="DARK">
        <item name="android:textColor">#727272</item>
    </style>

    <!-- Text color -->
    <style name="DARK_BACKGROUND">
        <item name="android:background">#DCDCDC</item>
    </style>

    <!-- Text color -->
    <style name="BUTTON">
        <item name="cardBackgroundColor">#727272</item>
        <item name="android:tint">#DCDCDC</item>
    </style>

    <!-- Text color -->
    <style name="LIGHT">
        <item name="android:textColor">#DCDCDC</item>
        <item name="cardBackgroundColor">#DCDCDC</item>
    </style>

    <!-- Text color -->
    <style name="STROKE">
        <item name="strokeColor">#DCDCDC</item>
    </style>

    <!-- Button background and text color -->
    <style name="INITIALS">
        <item name="android:textColor">#727272</item>
    </style>
</resources>
