<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemContactConstraint"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingHorizontal="16dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/light_grey"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/contactName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Nombre del contacto"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingBottom="4dp"
        android:paddingTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/my_black" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/contactPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="TelÃ©fono del contacto"
        android:paddingBottom="4dp"
        app:layout_constraintTop_toBottomOf="@id/contactName"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/my_black"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/contactEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Email del contacto"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/contactPhone"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/my_black"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/editContactButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_edit_contact"
        app:backgroundTint="@color/light_grey"
        android:contentDescription="@string/edit_contact"
        app:layout_constraintEnd_toStartOf="@id/deleteContactButton"
        app:layout_constraintTop_toTopOf="@id/contactName"
        app:layout_constraintBottom_toBottomOf="@id/contactEmail" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/deleteContactButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_delete"
        app:backgroundTint="@color/light_grey"
        android:contentDescription="@string/remove_contact"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/contactName"
        app:layout_constraintBottom_toBottomOf="@id/contactEmail" />

</androidx.constraintlayout.widget.ConstraintLayout>
